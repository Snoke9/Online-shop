<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    
    <welcome-file-list>
        <welcome-file>products.jsp</welcome-file>
<!--        <welcome-file>index.html</welcome-file>-->
    </welcome-file-list>
    
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>orders</servlet-name>
        <servlet-class>app.servlets.OrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orders</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>app.servlets.ProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>app.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>my_orders</servlet-name>
        <servlet-class>app.servlets.MyOrdersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>my_orders</servlet-name>
        <url-pattern>/my_orders</url-pattern>
    </servlet-mapping>
</web-app>
